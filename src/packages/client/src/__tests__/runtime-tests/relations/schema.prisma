datasource db {
  provider = "sqlite"
  url      = "sqlite:dev.db"
  default  = true
}

generator client {
  provider             = "prisma-client-js"
}

model Person {
  id    String @id @default(cuid())
  name  String
  sales Sale[] @relation("PersonsOnSale", references: [id])
}

model Sale {
  id     String   @id @default(cuid())
  date   DateTime
  persons Person[]  @relation("PersonsOnSale", references: [id])
}